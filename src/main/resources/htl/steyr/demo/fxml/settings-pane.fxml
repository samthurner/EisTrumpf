<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="281.0" prefWidth="508.0" spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="htl.steyr.demo.controller.SettingsController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Einstellungen" />

    <ToggleButton fx:id="changeTheme" onAction="#onThemechange" text="Light / Dark" />

    <Button onAction="#onChangeNameClicked" text="Namen ändern" />

    <Button onAction="#onResetStatsClicked" text="Reset Stats" />

    <Button onAction="#onBackClicked" text="Zurück" />
</VBox>
