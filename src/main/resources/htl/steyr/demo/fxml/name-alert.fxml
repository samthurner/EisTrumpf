<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="298.0" prefWidth="446.0" spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="htl.steyr.demo.controller.NameAlertController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 18;" text="Neuer Name:" />

    <TextField fx:id="nameField" promptText="Name eingeben" />

    <Button onAction="#onOkayClicked" text="Okay" />
    <Button onAction="#onCancelClicked" text="Abbrechen" />

</VBox>
